#sample-interface-img {
    .container {
        .row {
            .reponsive {
                width: 37%;

                @media (max-width: 1024px) {
                    width: 37%;
                }

                @media (max-width: 992px) {
                    width: 33%;
                }

                @media (max-width: 991px) {
                    width: 28%;
                }

                @media (max-width: 480px) {
                    width: 7%;
                }

                @media (max-width: 425px) {
                    width: 60%;
                }

                @media (max-width: 320px) {
                    width: 0%;
                }
            }

            .reponsive-fix {
                width: 26%;

                @media (max-width: 1024px) {
                    width: 26%;
                }

                @media (max-width: 992px) {
                    width: 30%;
                }

                @media (max-width: 991px) {
                    width: 40%;
                    margin: 0 auto;
                }

                @media (max-width: 480px) {
                    width: 60%;
                }

                @media (max-width: 425px) {
                    width: 65%;
                }

                @media (max-width: 375px) {
                    width: 75%;
                }

                @media (max-width: 320px) {
                    width: 85%;
                }

                .content {
                    .thumbnail {
                        position: relative;

                        .img-responsive {
                            height: 100%;
                            width: 100%;
                        }
                    }

                    .mirror_html {
                        position: absolute;
                        bottom: 30px;
                        left: 30px;
                        z-index: 2;
                    }
                }
            }
        }
    }
}
