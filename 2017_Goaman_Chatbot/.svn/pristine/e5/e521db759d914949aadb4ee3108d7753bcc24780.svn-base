//1
#sample-interface-one {
    .container {
        .row {
            .content {
                .content-inner {
                    position: relative;

                    #blocks {
                        .row-block {
                            list-style-type: none;

                            .img-content {
                                width: 100%;

                                @media (max-width: 320px) {
                                    height: 200px;
                                }
                            }
                        }
                    }
                }

                .info {
                    position: absolute;
                    top: 40px;
                    padding-left: 25px;

                    @media (max-width: 992px) {
                        top: 0px;
                    }

                    @media (max-width: 767px) {
                        top: 50px;
                    }

                    @media (max-width: 480px) {
                        top: 0px;
                    }

                    @media (max-width: 320px) {
                        top: 25px;
                    }

                    .title {
                        font-size: 22px;
                        color: #fff;

                        @media (max-width: 991px) {
                            font-size: 16px;
                        }

                        @media (max-width: 767px) {
                            font-size: 30px;
                        }

                        @media (max-width: 480px) {
                            font-size: 22px;
                        }

                        @media (max-width: 320px) {
                            font-size: 18px;
                        }
                    }

                    .link-web {
                        font-size: 20px;
                        color: #fff;
                        margin-top: 0px;
                        float: left;
                        clear: both;

                        @media (max-width: 991px) {
                            font-size: 15px;
                        }

                        @media (max-width: 767px) {
                            font-size: 25px;
                        }

                        @media (max-width: 480px) {
                            font-size: 20px;
                        }

                        @media (max-width: 320px) {
                            font-size: 16px;
                        }

                        .link {
                            color: #fff;
                            line-height: 42px;

                            &:hover {
                                text-decoration: none;
                            }
                        }
                    }

                    .btn-lg {
                        background: transparent;
                        -webkit-box-shadow: 0px 0px 6px 0px #f5f5f5;
                        -moz-box-shadow: 0px 0px 6px 0px #f5f5f5;
                        box-shadow: 0px 0px 6px 0px #f5f5f5;
                        border-color: transparent;
                        margin-top: 10px;
                        clear: both;
                        float: left;

                        &:hover {
                            background: #428bca;
                        }

                        @media (max-width: 991px) {
                            font-size: 15px;
                            padding: 4px 16px;
                            font-size: 15px;
                            margin-top: -15px;
                        }

                        @media (max-width: 767px) {
                            margin-top: 10px;
                            padding: 10px 16px;
                        }

                        @media (max-width: 320px) {
                            margin-top: 0px;
                        }
                    }
                }
            }

            .item {

                .info {
                    border: 1px solid #ccc;
                    clear: both;
                    float: left;
                    width: 100%;

                    .alert-link {
                        @media (max-width: 767px) {
                            padding-top: 50px;
                        }

                        @media (max-width: 480px) {
                            padding-top: 0px;
                        }

                        @media (max-width: 320px) {
                            width: 100%;
                            padding-bottom: 20px;
                            padding-left: 20px;
                        }

                        .title {
                            font-size: 22px;
                            font-weight: bold;

                            @media (max-width: 991px) {
                                font-size: 16px;
                            }

                            @media (max-width: 767px) {
                                font-size: 22px;
                            }

                            @media (max-width: 480px) {
                                font-size: 18px;
                            }
                        }

                        .alert-item {
                            font-size: 18px;
                            color: #ccc;

                            @media (max-width: 991px) {
                                font-size: 14px;
                            }

                            @media (max-width: 767px) {
                                font-size: 18px;
                            }

                            @media (max-width: 480px) {
                                font-size: 14px;
                            }
                        }

                        .link-web {
                            font-size: 18px;
                            margin-top: 0px;
                            color: #ccc;

                            @media (max-width: 991px) {
                                font-size: 14px;
                            }

                            @media (max-width: 767px) {
                                font-size: 18px;
                            }

                            @media (max-width: 480px) {
                                font-size: 14px;
                            }
                        }

                        .btn-lg {
                            border: 1px solid #428bca;
                            background: #fff;
                            color: #428bca;
                            font-size: 14px;
                            margin-bottom: 20px;
                            margin-top: 15px;

                            &:hover {
                                background: #428bca;
                                color: #fff;
                            }

                            @media (max-width: 991px) {
                                padding: 6px 8px;
                                font-size: 13px;
                            }

                            @media (max-width: 767px) {
                                padding: 10px 16px;
                                margin-top: 20px;
                            }

                            @media (max-width: 480px) {
                                padding: 5px 16px;
                                margin-top: 0px;
                            }

                            @media (max-width: 480px) {
                                margin-bottom: 0px;
                            }
                        }
                    }

                    .alert-img {
                        float: right;

                        #blocks {
                            .row-block {
                                list-style-type: none;

                                .img-item {
                                    width: 100%;
                                    padding-top: 20px;
                                    padding-bottom: 20px;

                                    @media (max-width: 320px) {
                                        padding-bottom: 0px;
                                    }
                                }
                            }
                        }

                        @media (max-width: 991px) {
                            padding-left: 0px;
                        }

                        @media (max-width: 480px) {
                            padding-left: 20px;
                        }

                        @media (max-width: 320px) {
                            padding-left: 15px;
                            width: 100%;
                        }
                    }
                }

                .text-center {
                    clear: both;
                    padding-top: 20px;
                    padding-bottom: 20px;
                    border: 1px solid #ccc;
                    border-radius: 0px 0px 10px 10px;

                    @media (max-width: 991px) {
                        padding-top: 15px;
                        padding-bottom: 15px;
                    }

                    @media (max-width: 767px) {
                        margin-bottom: 20px;
                    }

                    .view-more {
                        text-decoration: none;
                        cursor: pointer;
                    }
                }
            }
        }
    }
}
