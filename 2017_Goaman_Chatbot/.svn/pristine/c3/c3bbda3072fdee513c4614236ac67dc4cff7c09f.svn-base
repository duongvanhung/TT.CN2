#gallery-hq-demo {
    background-color: #353748;
    overflow-x: auto;
    position: relative;
    white-space: nowrap;
    height: auto;
    display: inline-block;
    width: 100%;

    .gallery-box {
        margin-left: 25px;
        margin-right: 25px;

        .container-no-width {
            .row {
                display: inline-block;
                white-space: nowrap;

                .fix-col {
                    position: relative;
                    margin-top: 50px;
                    margin-bottom: 30px;
                    display: inline-table;
                    white-space: nowrap;
                    padding-left: 15px;
                    padding-right: 15px;
                    width: 300px;
                    -webkit-transition: .5s all;
                    -moz-transition: .5s all;
                    transition: .5s all;

                    &:hover {
                        .glyphicon-trash {
                            opacity: 1;
                        }
                    }

                    .thumbnail {
                        position: relative;
                        -webkit-box-shadow: 0 6px 12px rgba(165, 212, 255, 0.22);
                        box-shadow: 0 3px 12px rgba(165, 212, 255, 0.22);
                        background-clip: padding-box;

                        &:hover {
                            .img-gallery {
                                opacity: 1;
                            }
                        }

                        .img-gallery {
                            height: 45px;
                            position: absolute;
                            top: 44%;
                            left: 42%;
                            opacity: 0.5;
                            -webkit-transition: .5s all;
                            -moz-transition: .5s all;
                            transition: .5s all;
                        }

                        .caption {
                            .title {
                            }

                            .subtitle-1 {
                            }

                            .bu-tton-2 {
                                width: 100%;

                                .bu-tton-1 {
                                    border-radius: 0 0 10px 10px;
                                    margin-top: 15px;
                                    position: relative;
                                    line-height: 56px;

                                    &:hover {
                                        .glyphicon-trash {
                                            opacity: 1;
                                        }
                                    }

                                    .glyphicon-trash {
                                        position: absolute;
                                        right: -32px;
                                        opacity: 0;
                                        top: 3px;
                                        color: #ccc;
                                        font-size: 16px;
                                        width: 50px;
                                        height: 50px;
                                        -webkit-transition: .5s all;
                                        -moz-transition: .5s all;
                                        transition: .5s all;

                                        &::before {
                                            padding-left: 15px;
                                            padding-top: 15px;
                                        }

                                        &:hover {
                                            color: rgb(255, 70, 51);
                                        }
                                    }

                                    .btn-default {
                                        width: 100%;
                                        border-radius: 0px;
                                        border-top: 0px;
                                        height: 40px;
                                        color: #428bca;
                                        background: #f5f5f5;
                                        border-color: transparent;
                                        -webkit-transition: .5s all;
                                        -moz-transition: .5s all;
                                        transition: .5s all;

                                        &:hover {
                                            background: #ccc;
                                        }
                                    }
                                }
                            }

                            .bu-tton-2 {
                                .accordion-fix {
                                    width: 100%;
                                    margin-top: 15px;
                                    font-weight: bold;
                                    color: #339dff;
                                    line-height: 29px;
                                    letter-spacing: 1px;
                                    border: 1px dotted;
                                }

                                .accordion-2 {
                                    width: 100%;
                                    margin-top: 15px;
                                    font-weight: bold;
                                    color: #339dff;
                                }
                            }

                            .bu-tton-3 {
                                width: 100%;

                                .bu-tton-1 {
                                    border-radius: 0 0 10px 10px;
                                    margin-top: 15px;
                                    position: relative;
                                    line-height: 56px;
                                    -webkit-transition: .5s all;
                                    -moz-transition: .5s all;
                                    transition: .5s all;

                                    &:hover {
                                        .glyphicon-trash {
                                            opacity: 1;
                                        }
                                    }

                                    .glyphicon-trash {
                                        position: absolute;
                                        right: -32px;
                                        opacity: 0;
                                        top: 3px;
                                        color: #ccc;
                                        font-size: 16px;
                                        width: 50px;
                                        height: 50px;
                                        -webkit-transition: .5s all;
                                        -moz-transition: .5s all;
                                        transition: .5s all;

                                        &::before {
                                            padding-left: 15px;
                                            padding-top: 15px;
                                        }

                                        &:hover {
                                            color: rgb(255, 70, 51);
                                        }
                                    }

                                    .btn-default {
                                        width: 100%;
                                        border-radius: 0px;
                                        border-top: 0px;
                                        height: 40px;
                                        color: #428bca;
                                        background: #f5f5f5;
                                        border-color: transparent;
                                        -webkit-transition: .5s all;
                                        -moz-transition: .5s all;
                                        transition: .5s all;

                                        &:hover {
                                            background: #ccc;
                                        }
                                    }
                                }
                            }

                            .bu-tton-3 {
                                .accordion-3 {
                                    width: 100%;
                                    margin-top: 15px;
                                    font-weight: bold;
                                    color: #339dff;
                                    line-height: 29px;
                                    letter-spacing: 1px;
                                    border: 1px dotted;
                                }
                            }
                        }
                    }

                    .fix-icon {
                        height: 295px;
                    }

                    .glyphicon-trash {
                        position: absolute;
                        right: -10px;
                        color: #ff3333;
                        opacity: 0;
                        top: -8px;
                        font-size: 18px;
                        width: 50px;
                        height: 50px;
                        -webkit-transition: .5s all;
                        -moz-transition: .5s all;
                        transition: .5s all;

                        &:before {
                            padding: 15px;
                        }
                    }
                }

                .fix-remove {
                    &:hover {
                        .glyphicon-trash {
                            opacity: 0;
                        }
                    }
                }
            }
        }
    }
}
